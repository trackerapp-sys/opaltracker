{
  "manifest_version": 3,
  "name": "Opal Auction Tracker",
  "version": "2.0.0",
  "description": "Automatically track bids in Facebook opal auction groups and sync with your auction tracker app",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "http://localhost:5000/*",
    "https://opaltracker.onrender.com/*",
    "https://*.replit.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Opal Auction Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["test-extension.html"],
      "matches": ["<all_urls>"]
    }
  ]
}