{
  "manifest_version": 3,
  "name": "Opal Tracker - Minimal Test",
  "version": "1.0.0",
  "description": "Minimal test version of Opal Auction Tracker",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "http://localhost:5000/*",
    "https://opaltracker.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "http://localhost:5000/*",
        "https://opaltracker.onrender.com/*",
        "file:///*"
      ],
      "js": ["content-minimal.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Opal Tracker Test"
  },
  "background": {
    "service_worker": "background-minimal.js"
  }
}
