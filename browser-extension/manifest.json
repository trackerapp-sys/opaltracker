{
  "manifest_version": 3,
  "name": "Opal Auction Tracker",
  "version": "1.0.0",
  "description": "Automatically track your opal auctions on Facebook with real-time bid monitoring",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://facebook.com/*",
    "https://*.replit.app/*",
    "https://*.replit.dev/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "https://facebook.com/*"
      ],
      "js": ["test-content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Opal Auction Tracker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://*.facebook.com/*"]
    }
  ]
}