{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "rootDir": "..",
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"],
      "@assets/*": ["attached_assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../shared/**/*.ts",
    "../vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
